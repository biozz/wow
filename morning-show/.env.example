# Morning Show Configuration
# Copy this file to .env and fill in your actual values

# Miniflu API URL - where to fetch unread messages from
MINIFLU_URL=http://localhost:8080/api/messages/unread

# Gemini API Key - required for text summarization and TTS
# Get your API key from: https://makersuite.google.com/app/apikey
GEMINI_API_KEY=your_gemini_api_key_here

# Output configuration
OUTPUT_FORMAT=wav
OUTPUT_FILE=morning-show.wav